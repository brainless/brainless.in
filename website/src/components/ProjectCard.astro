---
import type { CollectionEntry } from 'astro:content';

export interface Props {
	project: CollectionEntry<'blog'>['data'];
}

const { project } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
	<h2 class="text-2xl font-bold mb-2">
		<a href={project.url} target="_blank" rel="noopener noreferrer" class="hover:underline">
			{project.name}
		</a>
	</h2>
	<p class="text-gray-700 mb-4">{project.summary}</p>
	<div class="flex items-center text-sm text-gray-500">
		<span class="mr-4">‚≠ê {project.stars}</span>
		<span class="mr-4">{Object.keys(project.languages)[0]}</span>
		<span>Updated {new Date(project.last_updated).toLocaleDateString()}</span>
	</div>
</div>
