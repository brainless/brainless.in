---
export interface Video {
  title: string;
  description: string;
  link: string;
  thumbnail: string;
  publishDate: string;
}

export interface Props {
  video: Video;
}

const { video } = Astro.props;
---

<div class="border border-gray-700 rounded-lg p-4 mb-4 shadow-lg">
  <a href={video.link} target="_blank" rel="noopener noreferrer">
    <img
      src={video.thumbnail}
      alt={video.title}
      class="w-full h-48 object-cover rounded"
    />
  </a>
  <h3 class="text-xl font-bold mt-2">
    <a href={video.link} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
      {video.title}
    </a>
  </h3>
  <p class="text-gray-100 text-sm mt-2 mb-1">
    {video.description}
  </p>
  <span class="text-xs text-gray-400">
    Uploaded on {new Date(video.publishDate).toLocaleDateString()}
  </span>
</div>
